<Window x:Class="WarehouseAccounting.View.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseAccounting.View"
        mc:Ignorable="d"
        Title="AddOrderWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel >
            <!-- Имя клиента -->
            <TextBlock Text="Имя заказчика:" />
            <TextBox Text="{Binding EditedOrder.client_name, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Выбор товара -->
            <TextBlock Text="Выберите товар:" />
            <ComboBox ItemsSource="{Binding ProductsList}"
          SelectedItem="{Binding SelectedProduct}"
          DisplayMemberPath="product_name"
          Margin="0,5"/>

            <!-- Количество -->
            <TextBlock Text="Количество:" />
            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />

            
            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Margin="5" Background="#B9E0A5" Command="{Binding SaveCommand}"/>
                <Button Content="Показать товары" Click="DebugButton_Click" Width="150" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
