<Window x:Class="WarehouseAccounting.View.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseAccounting.View"
        mc:Ignorable="d"
        Title="EditOrderWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <!-- Имя клиента -->
        <TextBlock Text="Имя клиента:" Grid.Row="0" Margin="0,5"/>
        <TextBox Text="{Binding EditedOrder.client_name}" Grid.Row="1" Margin="0,5"/>

        <!-- Выбор товара -->
        <TextBlock Text="Выберите товар:" Grid.Row="2" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding ProductsList}"
                  SelectedValue="{Binding EditedOrder.order_product}"
                  SelectedValuePath="product_id"
                  DisplayMemberPath="product_name"
                  Grid.Row="3"
                  Margin="0,5"/>

        <!-- Количество -->
        <TextBlock Text="Количество:" Grid.Row="4" Margin="0,5"/>
        <TextBox Text="{Binding EditedOrder.quantity}" Margin="0,5"/>
        </StackPanel>
        

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal">
            <Button Content="Отмена" Width="150" Height="25" Margin="5" IsCancel="True"/>
            <Button Content="Сохранить" Width="150" Height="25" Margin="5" IsDefault="True" Background="#B9E0A5" Click="SaveButton_Click"/>
        </StackPanel>
            
        
    </Grid>
</Window>
