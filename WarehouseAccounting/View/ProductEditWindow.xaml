<Window x:Class="WarehouseAccounting.View.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseAccounting.View"
        mc:Ignorable="d"
        Title="ProductEditWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название товара:" />
            <TextBox Text="{Binding CurrentProduct.product_name}" />

            <TextBlock Text="Категория:" />
            <TextBox Text="{Binding CurrentProduct.category}" />

            <TextBlock Text="Единицы измерения:" />
            <TextBox Text="{Binding CurrentProduct.unit}" />

            <TextBlock Text="Цена:" />
            <TextBox Text="{Binding CurrentProduct.price}" />

            <Button Content="Сохранить изменения" 
                    
                    Width="180" 
                    HorizontalAlignment="Left" 
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
